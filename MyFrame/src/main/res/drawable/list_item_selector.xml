<?xml version="1.0" encoding="utf-8"?>
<!-- listview 中选择其中一项后的背景样式，不选择时，背景是白色的，选中后背景渐变 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="@color/item_selected_grey" android:centerY="0.15" android:endColor="@color/item_selected_grey" android:startColor="@color/item_selected_grey" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="@color/item_selected_grey" android:centerY="0.15" android:endColor="@color/item_selected_grey" android:startColor="@color/item_selected_grey" />
        </shape></item>
    <item android:state_checked="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="@color/item_selected_grey" android:centerY="0.15" android:endColor="@color/item_selected_grey" android:startColor="@color/item_selected_grey" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="@color/item_selected_grey" android:centerY="0.15" android:endColor="@color/item_selected_grey" android:startColor="@color/item_selected_grey" />
        </shape></item>
   

</selector>