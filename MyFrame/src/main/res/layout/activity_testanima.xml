<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testanima_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/testanima_ajb" />

        <TextView
            android:id="@+id/door_left"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/door_left" />

        <TextView
            android:id="@+id/door_right"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_toRightOf="@id/door_left"
            android:background="@drawable/door_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_rool"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/testanima_rool"
        android:gravity="center" >
    </RelativeLayout>
    
    <Button 
        android:layout_below="@id/layout_rool"
        android:id="@+id/btn_opendoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开门"
        />

</RelativeLayout>