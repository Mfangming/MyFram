<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 商家名称 -->
    <style name="item_sj_storename">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 商家地址style -->
    <style name="item_sj_add">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 首页tablehost -->
    <style name="sy_tablehost">
        <item name="android:paddingTop">4dp</item>
        <item name="android:background">@color/mt_host_bg</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 分类菜单 -->
    <style name="ic_category_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- 左边抽屉list字体 -->
    <style name="leftlayout_list_tv">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="backbtn">
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">46dp</item>
    </style>
    <!-- listview5样式 -->
    <style name="listview5_style">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/grey</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

</resources>
